#!/bin/bash
# Run sleeper-gini from the repository directory

SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"

if [ -f "$SCRIPT_DIR/.venv/bin/python" ]; then
    "$SCRIPT_DIR/.venv/bin/python" "$SCRIPT_DIR/run.py" "$@"
else
    echo "Virtual environment not found. Run:"
    echo "  python3 -m venv .venv && .venv/bin/pip install -e ."
    exit 1
fi
